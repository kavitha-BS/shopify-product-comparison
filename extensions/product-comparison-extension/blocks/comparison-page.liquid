  "name": "Product Comparison",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Page Heading",
      "default": "Product Comparison"
    },
    {
      "type": "color",
      "id": "table_border_color",
      "label": "Table Border Color",
      "default": "#dddddd"
    },
    {
      "type": "color",
      "id": "heading_bg",
      "label": "Table Header Background",
      "default": "#f8f9fa"
    }
  ]
}
{% endschema %}